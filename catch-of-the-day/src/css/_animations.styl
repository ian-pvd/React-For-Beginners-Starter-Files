
.order-enter {
  max-height: 0;
  padding: 0 !important;
  transform: translateX(-125%);
  transition: 350ms;

  &.order-enter-active {
    max-height: 60px;
    padding: 2rem 0 !important;
    transform: translateX(0);
  }
}

.order-exit {
  transform: translateX(0);
  transition: 350ms;

  &.order-exit-active {
    padding: 0;
    transform: translateX(125%);
  }
}

.count-enter {
  background-color: red;
  transition: 150ms;
  transform: translateY(100%);

  &.count-enter-active {
    background-color: orange;
    transform: translateY(0);
  }
}

.count-exit {
  transition: 150ms;
  transform: translateY(0);
  position: absolute;
  left: 0;
  bottom: 0;

  &.count-exit-active {
    transform: translateY(-100%);
  }
}
